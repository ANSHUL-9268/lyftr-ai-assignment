# Required: Webhook HMAC-SHA256 secret key
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
WEBHOOK_SECRET=your-secure-secret-key-here

# Database URL (SQLite for local development)
DATABASE_URL=sqlite:///./data/messages.db

# Application settings
APP_NAME=WhatsApp Webhook Service
APP_VERSION=1.0.0
DEBUG=false

# Server configuration
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
